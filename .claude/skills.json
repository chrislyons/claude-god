{
  "version": "1.0.0",
  "description": "claude-god skills configuration with template references",
  "templates": {
    "ci-troubleshooter": {
      "source": "~/.claude/skill-templates/ci-troubleshooter",
      "enabled": true,
      "filePatterns": [".github/workflows/**/*.yml"],
      "lazyLoad": true
    },
    "test-analyzer": {
      "source": "~/.claude/skill-templates/test-analyzer",
      "enabled": true,
      "filePatterns": ["tests/**/*", "**/*.test.*"],
      "lazyLoad": true
    },
    "schema-linter": {
      "source": "~/.claude/skill-templates/schema-linter",
      "enabled": true,
      "filePatterns": ["**/*.{json,yaml,yml}"],
      "excludePatterns": ["build/**", "node_modules/**"],
      "lazyLoad": true
    },
    "dependency-audit": {
      "source": "~/.claude/skill-templates/dependency-audit",
      "enabled": true,
      "filePatterns": ["package.json", "pnpm-lock.yaml", "Cargo.toml", "Cargo.lock", "CMakeLists.txt"],
      "triggerOnChange": true
    },
    "doc-standards": {
      "source": "~/.claude/skill-templates/doc-standards",
      "enabled": true,
      "filePatterns": ["docs/cgd/**/*.md"],
      "lazyLoad": true
    }
  },
  "skills": {}
}
