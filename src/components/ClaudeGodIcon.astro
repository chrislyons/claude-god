---
interface Props {
  size?: number;
  className?: string;
}
const { size = 32, className = '' } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 48 48"
  width={size}
  height={size}
  class={className}
  aria-hidden="true"
>
  <!-- Terracotta circle background -->
  <circle cx="24" cy="24" r="22" fill="var(--color-primary-accent)"/>

  <!-- God-like figure silhouette (simplified crown/deity) -->
  <path
    d="M16 32 L16 24 L18 22 L18 18 L20 16 L22 16 L24 14 L26 14 L28 16 L30 16 L30 18 L30 22 L32 24 L32 32 L28 32 L28 26 L26 28 L22 28 L20 26 L20 32 Z"
    fill="#1a1a1a"
  />

  <!-- Golden crown/halo accent -->
  <circle cx="24" cy="16" r="2.5" fill="#FCD34D"/>

  <!-- Crown/halo rays -->
  <path
    d="M20 14 L21 10 L22 14 M24 12 L24 8 L24 12 M28 14 L27 10 L26 14"
    stroke="#FCD34D"
    stroke-width="1.5"
    fill="none"
  />
</svg>
