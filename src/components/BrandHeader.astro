---
import ClaudeGodIcon from './ClaudeGodIcon.astro';
---

<button
  data-brand-toggle
  class="brand-header flex items-center gap-2.5 transition-opacity hover:opacity-80 active:opacity-60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary-accent rounded-sm"
  aria-label="Toggle theme (or press backslash key)"
  type="button"
  style="height: 28px;"
>
  <ClaudeGodIcon size={32} className="flex-shrink-0" />
  <span class="brand-text font-code text-sm font-semibold uppercase tracking-[2.4px] text-primary-accent" style="line-height: 28px;">
    CLAUDE-GOD
  </span>
</button>
